{
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "arrowParens": "always",
    "proseWrap": "preserve",
    "importOrder": ["^\\.", "^[a-zA-Z]", "^~"],
    "overrides": [
      {
        "files": "*.json",
        "options": {
          "printWidth": 200
        }
      },
      {
        "files": "*.{js,ts,tsx,jsx,json,html,vue,css,scss,less,sass,yaml,yml}",
        "options": {
          "tabWidth": 2,
          "useTabs": false,
          "singleQuote": false,
          "trailingComma": "es5",
          "bracketSpacing": true,
          "jsxBracketSameLine": false,
          "sortImports": true
        }
      }
    ]
  }